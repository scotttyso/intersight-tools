
  "{{ name }}" = {
    description                = "{{ descr }}"
{%- if inband_ip_pool %}
    inband_ip_pool             = "{{ inband_ip_pool }}"
{%- endif %}
{%- if inband_vlan_id %}
    inband_vlan_id             = {{ inband_vlan_id }}
{%- endif %}
{%- if ipv4_address_configuration %}
    ipv4_address_configuration = {{ ipv4_address_configuration|lower }}
{%- else %}
    ipv4_address_configuration = true
{%- endif %}
{%- if ipv6_address_configuration %}
    ipv6_address_configuration = {{ ipv6_address_configuration|lower }}
{%- else %}
    ipv6_address_configuration = false
{%- endif %}
{%- if out_of_band_ip_pool %}
    out_of_band_ip_pool        = "{{ out_of_band_ip_pool }}"
{%- endif %}
{%- if tags %}
    tags = [
  {%- for item in tags %}
      {
    {%- for k, v in item.items() %}
        {{ k }} = "{{ v }}",
    {%- endfor %}
      },
  {%- endfor %}
    ]
{%- else %}
    tags                       = []
{%- endif %}
  }