
  "{{ name }}" = {
    description    = "{{ descr }}"
    enabled        = {{ enabled|lower }}
{%- if ipmi_key %}
    ipmi_key       = {{ ipmi_key }}
{%- else %}
    ipmi_key       = null
{%- endif %}
    privilege      = "admin"
{%- if tags %}
    tags = [
  {%- for item in tags %}
      {
    {%- for k, v in item.items() %}
        {{ k }} = "{{ v }}",
    {%- endfor %}
      },
  {%- endfor %}
    ]
{%- else %}
    tags           = []
{%- endif %}
  }