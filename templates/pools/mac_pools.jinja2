
  "{{ name }}" = {
{%- if assignment_order %}
    assignment_order = "{{ assignment_order }}"
{%- endif %}
{%- if mac_blocks %}
    mac_blocks       = [
  {%- for item in mac_blocks %}
      {
    {%- for k, v in item.items() %}
      {%- if k == 'from' %}
        from = "{{ v }}"
      {%- elif k == 'size' %}
        size = {{ v }}
      {%- elif k == 'to' %}
        # to   = "{{ v }}"
      {%- endif %}
    {%- endfor %}
    {%- if not loop.last %}
      },
    {%- else %}
      }
    {%- endif %}
  {%- endfor %}
    ]
{%- else %}
    mac_blocks       = []
{%- endif %}
{%- if tags %}
    tags = [
  {%- for item in tags %}
      {
    {%- for k, v in item.items() %}
        {{ k }} = "{{ v }}"
    {%- endfor %}
      },
  {%- endfor %}
    ]
{%- else %}
    tags             = []
{%- endif %}
  }