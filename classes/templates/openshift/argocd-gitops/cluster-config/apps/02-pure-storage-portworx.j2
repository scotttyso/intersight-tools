---
apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: pure-storage-portworx
  namespace: openshift-gitops
  annotations:
    argocd.argoproj.io/sync-wave: "3"
spec:
  destination:
    namespace: portworx
    server: https://kubernetes.default.svc
  project: default
  source:
    path: cluster-config/pure-storage/portworx/overlays/stable
    repoURL: {{ argo_cd.repo_url }}
    targetRevision: main
  syncPolicy:
    automated:
      prune: {{ argo_cd.sync_policy.prune | default(true) }}
      selfHeal: {{ argo_cd.sync_policy.self_heal | default(true) }}
    syncOptions:
      - CreateNamespace=true
