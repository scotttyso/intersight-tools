apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: external-secrets-operator
  namespace: openshift-gitops
  annotations:
    argocd.argoproj.io/sync-wave: "0"
spec:
  project: default
  source:
    repoURL: {{ argo_cd.repo_url }}
    targetRevision: HEAD
    path: cluster-config/external-secrets/operator/overlays/stable
  destination:
    server: https://kubernetes.default.svc
    namespace: external-secrets
  syncPolicy:
    automated:
      prune: {{ argo_cd.sync_policy.prune | default(true) }}
      selfHeal: {{ argo_cd.sync_policy.self_heal | default(true) }}
    syncOptions:
      - CreateNamespace=true