# Creates an instance of NodeFeatureDiscovery, which deploys the worker pods
apiVersion: nfd.openshift.io/v1
kind: NodeFeatureDiscovery
metadata:
  name: nfd-instance
  namespace: openshift-nfd
spec:
  operand:
    namespace: openshift-nfd
  workerConfig:
    configData: |
      core:
        sleepInterval: 60s
