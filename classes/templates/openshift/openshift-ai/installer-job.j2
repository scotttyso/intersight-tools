---
apiVersion: v1
kind: ServiceAccount
metadata:
  name: rhoai-installer-sa
  namespace: redhat-ods-operator # We'll run the job here
---
kind: ClusterRoleBinding
apiVersion: rbac.authorization.k8s.io/v1
metadata:
  name: rhoai-installer-crb
subjects:
  - kind: ServiceAccount
    name: rhoai-installer-sa
    namespace: redhat-ods-operator
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: cluster-admin
---
apiVersion: batch/v1
kind: Job
metadata:
  name: rhoai-installer-job
  namespace: redhat-ods-operator
spec:
  template:
    spec:
      containers:
        - name: installer
          image: registry.redhat.io/openshift4/ose-cli:latest
          command: ["/bin/bash", "-c", "/scripts/setup.sh"]
          volumeMounts:
            - name: scripts
              mountPath: /scripts
            - name: operators
              mountPath: /manifests/operators
            - name: configs
              mountPath: /manifests/configs
      volumes:
        - name: scripts
          configMap:
            name: installer-script-cm
            defaultMode: 0755
        - name: operators
          configMap:
            name: operator-manifests-cm
        - name: configs
          configMap:
            name: config-manifests-cm
      restartPolicy: Never
      serviceAccountName: rhoai-installer-sa
  backoffLimit: 1
